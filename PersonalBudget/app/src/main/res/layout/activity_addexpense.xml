<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView1"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:textSize="20dp"
                    android:id="@+id/navincome1"

                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    />
                <TextView
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:id="@+id/navexpense1"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expenses"/>

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/navstat1"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Stat"/>

                <TextView
                    android:textSize="20dp"
                    android:id="@+id/navdeconnexion1"
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deconnexion"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="ADD EXPENSE "
                    android:textSize="50dp" />

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/img2"
                    />

            </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">



        <EditText
            android:visibility="invisible"
            android:id="@+id/errortext2"
            android:textColor="@color/red"
            android:text="*INCOM DEPASSED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name: "
            android:textSize="30dp" />

        <EditText
            android:id="@+id/nameexpense"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Expense Name" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Cost: "
            android:textSize="30dp" />

        <EditText
            android:inputType="number"
            android:id="@+id/cost"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Enter Cost" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Date: "
            android:textSize="30dp" />

        <DatePicker
            android:id="@+id/date"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Select Date"
            android:inputType="date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">
        <Button
           android:id="@+id/save"
            android:text="Save"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>